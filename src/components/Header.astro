import { getAllLocations, getAllStates, getCitiesInState } from '../data/location-store';

interface Props {
  stateName?: string;
  stateSlug?: string;
  cityName?: string;
}

const { stateName, stateSlug, cityName } = Astro.props;

// Prepare locations data for client-side
const allLocations = getAllLocations();
const allStates = getAllStates();

// Create a simplified data structure for the client
const locationsData = allLocations.map(loc => ({
  city: loc.city,
  stateFull: loc.stateFull,
  stateSlug: loc.stateSlug,
  citySlug: loc.citySlug,
}));

const statesData = allStates.map(stateSlug => {
  const cities = getCitiesInState(stateSlug);
  return {
    slug: stateSlug,
    name: cities[0]?.stateFull || stateSlug,
  };
});
