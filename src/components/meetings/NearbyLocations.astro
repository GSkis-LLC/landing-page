---
import { calculateDistance, toSlug } from '../../data/location-store';
import type { LocationConfig } from '../../data/location-store';

interface Props {
  currentCity: string;
  stateFull: string;
  stateSlug: string;
  currentLat: number;
  currentLng: number;
  otherCities: LocationConfig[];
}

const { currentCity, stateFull, stateSlug, currentLat, currentLng, otherCities } = Astro.props;

// Calculate distances and sort by proximity
const citiesWithDistance = otherCities
  .filter(city => city.city !== currentCity)
  .map(city => ({
    ...city,
    distance: calculateDistance(currentLat, currentLng, city.lat, city.lng),
    citySlug: toSlug(city.city),
  }))
  .sort((a, b) => a.distance - b.distance);
---

{citiesWithDistance.length > 0 && (
  <section class="nearby-locations section-card" aria-labelledby="nearby-heading">
    <h2 id="nearby-heading" class="section-title">Looking for other meetings in {stateFull}?</h2>
    <p class="nearby-subtitle">Explore AA meetings in other cities across {stateFull}:</p>
    <ul class="nearby-list">
      {citiesWithDistance.map((city) => (
        <li class="nearby-item">
          <a href={`/meetings/${stateSlug}/${city.citySlug}`} class="nearby-link">
            <span class="nearby-city">{city.city}</span>
            <span class="nearby-distance">{Math.round(city.distance)} miles away</span>
          </a>
        </li>
      ))}
    </ul>
  </section>
)}

<style>
  .nearby-locations {
    margin-top: 2rem;
  }

  .nearby-subtitle {
    color: var(--text-secondary, #6b7280);
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .nearby-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 0.75rem;
  }

  .nearby-item {
    margin: 0;
  }

  .nearby-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.875rem 1rem;
    background: #f0f6ff;
    border-radius: 8px;
    text-decoration: none;
    color: #5A7D9A;
    transition: background-color 0.2s ease, transform 0.2s ease, color 0.2s ease;
    border: 1px solid #5A7D9A;
  }

  .nearby-link:hover {
    background: #5A7D9A;
    transform: translateY(-1px);
    color: #fff;
  }

  .nearby-link:hover .nearby-city,
  .nearby-link:hover .nearby-distance {
    color: #fff;
  }

  .nearby-city {
    font-weight: 600;
    color: #5A7D9A;
  }

  .nearby-distance {
    font-size: 0.875rem;
    color: #5A7D9A;
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .nearby-list {
      grid-template-columns: 1fr;
    }
  }
</style>
