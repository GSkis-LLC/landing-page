    <script>
      import { track } from "astrojs-mixpanel/client";
      // App Dialog Logic
      document.addEventListener('DOMContentLoaded', function() {
        const dialog = document.getElementById('appDialog');
        const dismissBtn = document.getElementById('dismissDialog');
        
        if (!dialog || !dismissBtn) return;
        
        // Show dialog every time the page loads
        setTimeout(() => {
          const dialogContent = dialog.querySelector('.app-dialog');
          if (dialogContent) {
            dialog.classList.add('show');
            dialogContent.classList.add('show');
          }
        }, 1000);
        
        // Dismiss dialog
        dismissBtn.addEventListener('click', function() {
          const dialogContent = dialog.querySelector('.app-dialog');
          if (dialogContent) {
            dialog.classList.remove('show');
            dialogContent.classList.remove('show');
          }
        });
        
        // Close dialog when clicking overlay
        dialog.addEventListener('click', function(e) {
          if (e.target === dialog) {
            const dialogContent = dialog.querySelector('.app-dialog');
            if (dialogContent) {
              dialog.classList.remove('show');
              dialogContent.classList.remove('show');
            }
          }
        });
        
        // Track App Store download button click
        const appStoreLink = dialog.querySelector('a[href*="apps.apple.com"]');
        if (appStoreLink) {
          appStoreLink.addEventListener('click', function() {
            track('Download from App Store', {
              page: 'attendance',
              hash: window.location.pathname.split('/').pop()
            });
          });
        }
        
        // Handle app link clicks
        const appLink = dialog.querySelector('a[href^="mymeeting://"]') as HTMLAnchorElement;
        if (appLink) {
          appLink.addEventListener('click', function(e) {
            track('Open in App', {
              page: 'attendance',
              hash: window.location.pathname.split('/').pop()
            });
            
            // Try to open the app
            const appUrl = this.href;
            const fallbackUrl = 'https://apps.apple.com/us/app/mymeetings-aa-companion/id6748364894';
            
            // Set a timeout to redirect to App Store if app doesn't open
            const timeout = setTimeout(() => {
              window.location.href = fallbackUrl;
            }, 2000);
            
            // Try to open the app
            window.location.href = appUrl;
            
            // Clear timeout if user stays on page (app opened)
            window.addEventListener('focus', function() {
              clearTimeout(timeout);
            }, { once: true });
          });
        }
      });
    </script>
    
